<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/secondary"
    tools:context=".AdvancedCalculator">

    <TextView
        android:id="@+id/solution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="17dp"
        android:text="0"
        android:textAlignment="textEnd"
        android:textColor="@color/dark"
        android:textSize="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:id="@+id/result"
        android:textSize="64dp"
        android:textColor="@color/dark"
        android:textAlignment="textEnd"
        android:layout_above="@+id/buttons_layout"
        android:layout_margin="16dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">



            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_open_bracket"
                android:text="("
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/close_bracket"
                android:text=")"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_divide"
                android:text="/"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_switch_sign"
                android:text="±"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_c"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="66dp"
                android:layout_height="66dp"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                android:text="C"
                android:textColor="@color/white"
                android:textSize="32dp"
                app:cornerRadius="36dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/button_ln"
                android:text="ln"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/button_log"
                android:text="log"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_sqrt"
                android:text="√"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/button_power"
                android:text="x^2"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/button_power_xy"
                android:text="x^y"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/button_ctg"
                android:text="ctg"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_7"
                android:text="7"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_8"
                android:text="8"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_9"
                android:text="9"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                app:cornerRadius="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_multiplication"
                android:text="*"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/button_tan"
                android:text="tan"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_4"
                android:text="4"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_5"
                android:text="5"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_6"
                android:text="6"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_minus"
                android:text="-"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/button_cos"
                android:text="cos"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_1"
                android:text="1"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_2"
                android:text="2"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_3"
                android:text="3"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_plus"
                android:text="+"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="11dp"
                android:textColor="@color/white"
                android:id="@+id/button_sin"
                android:text="sin"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:id="@+id/button_AC"
                android:text="AC"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_0"
                android:text="0"
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_dot"
                android:text="."
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />
            <com.google.android.material.button.MaterialButton
                android:layout_width="66dp"
                android:layout_height="66dp"
                app:cornerRadius="36dp"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:textSize="32dp"
                android:textColor="@color/white"
                android:id="@+id/button_equals"
                android:text="="
                android:layout_margin="6dp"
                android:background="@drawable/rounded_shape"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
